<div class="container">
  <p style="color: green"><%= notice %></p>

  <div class="recipe, mb-4">
    <%= render @recipe %>
  </div>

  <div>
    <%= link_to "Edit this recipe", edit_recipe_path(@recipe), class: "edit btn btn-primary" %> |
    <%= link_to "Back to recipes", recipes_path, class: "back btn btn-secondary" %>
  </div>
  <div class="mt-4 mb-4">
    <%= button_to "Destroy this recipe", @recipe, method: :delete, class: "destroy btn btn-danger " %>
  </div>
</div>
