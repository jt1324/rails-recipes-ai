<div id="<%= dom_id recipe %>" class="recipe-card">
  <h3>
    <strong>Name:</strong>
    <%= recipe.name %>
  </h3>

  <p>
    <strong>Ingredients:</strong>
    <%= recipe.ingredients %>
  </p>

  <p class="mb-4">
    <% if recipe.content.present? %>
      <%= recipe.content %>
    <% else %>
      <em>ğŸ”„ Generating recipe content... Please refresh in a moment!</em>
    <% end %>
  </p>

  <div class="img_logo">
    <p><%= cl_image_tag recipe.photo.key, alt: "AI-generated image of the recipe", class: "recipe-photo" if recipe.photo.attached? %></p>
    <p><%= image_tag "logo_AI.png", class: "card-logo" %></p>
  </div>

</div>
